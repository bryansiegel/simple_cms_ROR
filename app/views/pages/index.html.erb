<h1>Pages</h1>

<%= link_to 'Add A New Page', new_page_path %>


    <table>
        <tr>
            <th>Name</th>
            <th>Permalink</th>
            <th>Position</th>
            <th>Visible</th>
            <th>Content</th>
        </tr>

    <% @pages.each do |page| %>
        <tr>
            <td><%= page.name %></td>
            <td><%= page.permalink %></td>
            <td><%= page.position %></td>
            <td><%= page.visible ? 'true' : 'false' %></td>
            <td><%= page.content %></td>
            <td class="actions">
                    <%= link_to 'Show', page_path(page), :class => 'action show' %>
                    <%= link_to 'Edit', edit_page_path(page), :class => 'action show' %>
                    <%= link_to 'Delete', delete_page_path(page), :class => 'action show' %>

                </td>
        </tr>
    <% end %>    
    </table>

  
