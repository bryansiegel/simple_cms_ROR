<%= link_to '<< Back To List', subjects_path, :class => 'back-link' %>

<div class="pages edit">
    <h2>Update Page</h2>
    
    <%= form_for(@page) do |f| %>
    
       <table>
            <tr>
                <th>Subject Id</th>
                <td><%= f.text_field :subject_id %></td>
            </tr>
            <tr>
                <th>Name</th>
                <td><%= f.text_field :name %></td>
            </tr>
            <tr>
                <th>Permalink</th>
                <td><%= f.text_field :permalink %></td>
            </tr>
            <tr>
                <th>Position</th>
                <td><%= f.text_field :position %></td>
            </tr>
            <tr>
                <th>Visible</th>
                <td><%= f.text_field :visible %></td>
            </tr>
            <tr>
                <th>Content</th>
                <td><%= f.text_field :content %></td>
            </tr>
        </table>

        <div class="form-buttons">
            <%= f.submit "Update Page" %>
        </div>

    <% end %>
      
</div>